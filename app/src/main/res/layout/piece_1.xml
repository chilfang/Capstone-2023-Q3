<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/piece_1_platform_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="124dp"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:src="@drawable/block_yellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/platform" />

    <ImageView
        android:id="@+id/piece_1_platform_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:src="@drawable/block_yellow"
        app:layout_constraintBottom_toTopOf="@id/piece_1_platform_1"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/platform" />

    <ImageView
        android:id="@+id/piece_1_platform_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:scaleX="0.2"
        android:scaleY="0.2"
        android:src="@drawable/block_yellow"
        app:layout_constraintBottom_toTopOf="@id/piece_1_platform_2"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/platform" />

</androidx.constraintlayout.widget.ConstraintLayout>